{
  "name": "Dotnet-Docker Dev",
  "build": {
    "dockerfile": "docker/Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": ["ms-dotnettools.csharp"]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest"
    }
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker-host.sock,type=bind"
  ],
  "runArgs": ["--privileged"]
}
